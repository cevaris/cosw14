<%= form_for(@photo_session) do |f| %>
  <% if @photo_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo_session.errors.count, "error") %> prohibited this photo_session from being saved:</h2>

      <ul>
      <% @photo_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div><%= f.label :phones %><br />
    <%= f.hidden_field :phones, value: @photo_session.phone_list, placeholder:'Enter Phone Numbers', style:'width: 300px'%>  
  </div>
  <div><%= f.label :emails %><br />
    <%= f.hidden_field :emails, value: @photo_session.email_list, placeholder:'Enter Emails', style:'width: 300px'%>  
  </div>

  <div class="actions"><br />
    <%= f.submit 'Submit', class:'btn btn-primary' %>
  </div>
<% end %>



<script>
  $("#photo_session_phones").select2({ 
    tags: [], 
    placeholder: "Enter Phone Numbers",
    tokenSeparators: [",", " "],
    minimumInputLength: 1
  });
  $("#photo_session_emails").select2({ 
    tags: [],
    placeholder: "Enter Emails",
    tokenSeparators: [",", " "],
    minimumInputLength: 1
  });
</script>






